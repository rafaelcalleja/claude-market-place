{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Puppeteer Template",
  "description": "to-be-continuous/puppeteer",
  "type": "object",
  "properties": {
    "inputs": {
      "type": "object",
      "description": "Valid inputs for Puppeteer template",
      "properties": {
        "image": {
          "type": "string",
          "description": "The Docker image used to run Puppeteer",
          "default": "ghcr.io/puppeteer/puppeteer:latest"
        },
        "project-dir": {
          "type": "string",
          "description": "The Puppeteer project directory (containing package.json)",
          "default": "."
        },
        "test-extra-args": {
          "type": "string",
          "description": "Testing framework extra options based on Jest",
          "x-advanced": true
        },
        "review-enabled": {
          "type": "boolean",
          "description": "Set to enable Puppeteer tests on review environments (dynamic environments instantiated on development branches)"
        }
      },
      "additionalProperties": false
    }
  },
  "_meta": {
    "prefix": "PUPPETEER_",
    "kind": "acceptance",
    "is_component": true,
    "features": [],
    "variants": [],
    "variable_count": 4
  }
}