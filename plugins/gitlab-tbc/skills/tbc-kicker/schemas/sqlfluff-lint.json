        },
        "lint-args": {
          "type": "string",
          "description": "Lint options and arguments",
          "x-advanced": true
        }
      },
      "additionalProperties": false
    }
  },
  "_meta": {
    "prefix": "SQLFLUFF_",
    "kind": "analyse",
    "is_component": true,
    "features": [],
    "variants": [],
